<form {{action 'saveItem' on='submit'}}>
  <div class="form-group">
    <label for="name">Item name:</label>
    {{input required='required' value=name class='form-control'}}
  </div>
  <div class="form-group">
    <label for="description">Item description:</label>
    {{input required='required' value=description class='form-control'}}
  </div>
  <div class="form-group">
    <label for="image">Item image:</label>
    {{input required='required' value=image class='form-control'}}
  </div>
  <div class="form-group">
    <label for="price">Item price:</label>
    {{input required='required' value=price class='form-control'}}
  </div>
  <div class="form-group">
    <label for="quantity">Item quantity:</label>
    {{input required='required' value=quantity class='form-control'}}
  </div>
  <button>Add Item</button>
</form>
